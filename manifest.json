{
  "manifest_version": 2,
  "name": "9anime Companion",
  "version": "0.0.1",

  "author": "Jewel Mahanta",
  "homepage_url": "https://github.com/lap00zza/9anime-Companion",

  "description": "A simple companion extension for 9Anime",
  "icons": {
    "16": "assets/images/icon16.png",
    "48": "assets/images/icon48.png",
    "96": "assets/images/icon96.png",
    "128": "assets/images/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://9anime.to/watch/*", "https://9anime.is/watch/*", "https://9anime.tv/watch/*"],
      "js": ["assets/js/jquery-3.2.0.min.js", "assets/js/content_watch_page.js"],
      "css": ["assets/sass/style_others.css"]
    },
    {
      "matches": ["https://9anime.to/*", "https://9anime.is/*", "https://9anime.tv/*"],
      "js": ["assets/js/jquery-3.2.0.min.js", "assets/js/content_main_website.js"],
      "css": ["assets/sass/style_others.css"]
    }
  ],

  "browser_action": {
    "default_icon": "assets/images/icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["assets/js/events.js"],
    "persistent": false
  },

  "permissions": [
    "tabs",
    "storage"
  ],

  "web_accessible_resources": [
    "assets/images/*"
  ]
}